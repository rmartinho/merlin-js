    "format": "prettier --write 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rmartinho/merlin-js.git"
  },
  "keywords": [
