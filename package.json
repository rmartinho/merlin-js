  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/rmartinho/merlin-js/issues"
  },
  "homepage": "https://github.com/rmartinho/merlin-js#readme",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "randchacha": "^1.0.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@rmf1723/strobe": "^0.1.1"
  }
